{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./packages",
    "allowJs": false,
    "checkJs": false,
    "paths": {
      "@tiptap/*": ["*/src"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "files": [
    "./shims/vue.d.ts"
  ],
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
