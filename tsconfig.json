{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "@tiptap/*": ["packages/*/dist", "packages/*/src"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "files": [
    "./env.d.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
